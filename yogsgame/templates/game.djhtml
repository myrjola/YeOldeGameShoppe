{% extends "base.djhtml" %}
{% load bootstrap3 %}

{% block content %}

    <h1>{{ game.title }}</h1>

    {% if user_owns_game %}
    <iframe name="game_iframe" src="{{ game.url }}" width="300" height="300">
        <p>Your browser does not support iframes.</p>
    </iframe>

    {% else %}
    <a href="{% url 'buy_game' game_id=game.pk %}" type="button" class="btn btn-default">Buy game for {{ game.price }}</a>
    {% endif %}

{% endblock %}
